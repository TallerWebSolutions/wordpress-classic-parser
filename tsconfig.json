    "module": "commonjs",
    "lib": ["esnext"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true
  }
}
